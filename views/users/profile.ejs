<div class="row my-3">
    <div class="col-md-8 col-md-offset-2">
        <h1>Your Profile</h1>
        <hr>
        <h2>
            My Orders
        </h2>
        <% orders.forEach(order=>{ %>
        <div class="card my-4">
            <div class="card-header">
              <strong class="align-justify my-4">ORDER ID : <%=order._id%></strong><span class=" mx-8 float-right btn btn-dark">Track</span>
            </div>
            <div class="card-body">
              <h5>Items</h5> 
              <p class="card-text">
                <ul class="list-group">
                    <% order.items.forEach(item=>{ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%=item.item.productTitle%>
                      <span class="badge badge-primary badge-pill"><%=item.qty%> x Rs <%=item.price%></span>
                    </li>
                    <%})%>
                  </ul>
              </p>
              <div class="thead-light"><strong>Total : </strong>
                Rs <%=order.cart.totalPrice%></div>
            </div>
          </div>
          <%})%>
    </div>
</div>